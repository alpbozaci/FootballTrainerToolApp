<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.bozaci.footballtrainertoolapp.MainActivity">

    <Button
        android:id="@+id/button_match_list"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="133dp"
        android:layout_marginTop="167dp"
        android:text="@string/match_list"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/button_player_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_list"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/button_match_list"
        android:layout_marginLeft="133dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</android.support.constraint.ConstraintLayout>
