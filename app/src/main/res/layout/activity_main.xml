<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ch.bozaci.footballtrainertoolapp.MainActivity">

    <Button
        android:id="@+id/button_match_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#555"
        android:text="@string/match_list"
        android:textColor="#fff"
        android:textSize="20sp"
        android:fontFamily="monospace"
        android:gravity="center"
        />

    <Button
        android:id="@+id/button_player_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#555"
        android:text="@string/player_list"
        android:textColor="#fff"
        android:textSize="20sp"
        android:fontFamily="monospace"
        android:gravity="center"
        />

    <Button
        android:id="@+id/button_start_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#555"
        android:text="@string/start_match"
        android:textColor="#fff"
        android:textSize="20sp"
        android:fontFamily="monospace"
        android:gravity="center"
        />

</LinearLayout>
