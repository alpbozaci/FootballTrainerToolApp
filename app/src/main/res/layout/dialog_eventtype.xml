<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/button_eventtype_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="GOAL"/>

    <Button
        android:id="@+id/button_eventtype_assist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="ASSIST"/>

    <Button
        android:id="@+id/button_eventtype_player_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="PLAYER IN"/>

    <Button
        android:id="@+id/button_eventtype_player_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="PLAYER OUT"/>

    <Button
        android:id="@+id/button_eventtype_yellow_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="YELLOW CARD"/>

    <Button
        android:id="@+id/button_eventtype_red_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="RED CARD"/>

    <Button
        android:id="@+id/button_eventtype_injured"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="INJURED"/>

</LinearLayout>
