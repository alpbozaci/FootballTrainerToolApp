<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <TextView
            android:id="@+id/textview_match_hometeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hometeam"
            />

        <EditText
            android:id="@+id/edittext_match_hometeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text=""
            />

        <TextView
            android:id="@+id/textview_match_guestteam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/guestteam"
            />

        <EditText
            android:id="@+id/edittext_match_guestteam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text=""
            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radiobutton_match_type_championship"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/championship_play"/>

            <RadioButton
                android:id="@+id/radiobutton_match_type_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/testplay_play"/>
        </RadioGroup>

        <DatePicker
            android:id="@+id/datepicker_match_date"
            android:layout_width="match_parent"
            android:layout_height="162dp"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            />

        <TimePicker
            android:id="@+id/timepicker_match_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:timePickerMode="spinner"
            />

        <Button
            android:id="@+id/button_match_dialog_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAVE"
            />

        <Button
            android:id="@+id/button_match_dialog_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DELETE"/>

        <Button
            android:id="@+id/button_match_dialog_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            />

    </LinearLayout>

</ScrollView>