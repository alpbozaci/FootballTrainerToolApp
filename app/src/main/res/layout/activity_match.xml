<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ch.bozaci.footballtrainertoolapp.MatchActivity">

    <TabHost
        android:id="@+id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_margin="5px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="0px">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="10px"/>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10px">

                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="55"
                        android:layout_margin="5px"
                        android:paddingBottom="0px">

                        <ListView
                            android:id="@+id/listview_select_player"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#e0e0e0"
                            />
                    </LinearLayout>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="#f0f0f0"
                        android:layout_margin="5px"
                        android:layout_weight="45">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="100"
                            android:background="#000000"
                            android:layout_margin="1px">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:text="@string/guestteam"
                                android:gravity="center"
                                android:fontFamily="monospace"
                                android:textColor="#ffffff"
                                android:textSize="14sp"
                                />

                            <Button
                                android:id="@+id/button_goal_guestteam"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:text="GOAL"
                                />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="100"
                            android:background="#000000">

                            <TextView
                                android:id="@+id/textview_hometeam"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:fontFamily="monospace"
                                android:gravity="center"
                                android:text="-"
                                android:textColor="#dddddd"
                                android:textSize="18sp"
                                />

                            <TextView
                                android:id="@+id/textview_guestteam"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:gravity="center"
                                android:fontFamily="monospace"
                                android:text="-"
                                android:textColor="#dddddd"
                                android:textSize="18sp"
                                />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="100"
                            android:background="#000000">

                            <TextView
                                android:id="@+id/textview_score_hometeam"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:gravity="center"
                                android:fontFamily="monospace"
                                android:inputType="numberDecimal"
                                android:text="0"
                                android:textColor="#ffdd00"
                                android:textSize="22sp"
                                />

                            <TextView
                                android:id="@+id/textview_score_guestteam"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:gravity="center"
                                android:fontFamily="monospace"
                                android:inputType="numberDecimal"
                                android:text="0"
                                android:textColor="#ffdd00"
                                android:textSize="22sp"
                                />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="100"
                            android:background="#000000"
                            android:layout_margin="1px">

                            <TextView
                                android:id="@+id/textview_match_timer_min"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:background="#000000"
                                android:text="00"
                                android:textColor="#fff"
                                android:textSize="20sp"
                                android:fontFamily="monospace"
                                android:gravity="center"
                                android:layout_weight="12"
                                />

                            <TextView
                                android:id="@+id/textview_match_timer_sec"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:background="#000000"
                                android:text="00"
                                android:textColor="#fff"
                                android:textSize="20sp"
                                android:fontFamily="monospace"
                                android:gravity="center"
                                android:layout_weight="12"
                                />

                            <Button
                                android:id="@+id/button_start_timer"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:text="Start"
                                android:layout_weight="25"
                                />

                            <Button
                                android:id="@+id/button_pause_timer"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:text="Pause"
                                android:layout_weight="25"
                                />

                            <Button
                                android:id="@+id/button_stop_timer"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:text="Stop"
                                android:layout_weight="25"
                                />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#000000"
                            android:layout_margin="1px">

                            <Button
                                android:id="@+id/button_stop_match"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/stop_match"
                                />

                        </TableRow>

                    </TableLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/listview_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>


</LinearLayout>
